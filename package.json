{
  "name": "mojito",
  "description": "Lightweight Controller JS Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomaspink/mojito.js"
  },
  "scripts": {
    "start": "tsc -w & live-server",
    "watch-bundle": "watch 'npm run bundle' dist/mojito",
    "bundle": "browserify dist/mojito/mojito.js -o bundle/mojito.bundle.js",
    "watch-bundle-spec": "watch 'npm run bundle-spec' dist/mojito --wait=1",
    "bundle-spec": "browserify dist/mojito/mojito.spec.js -o bundle/mojito.spec.js",
    "karma": "karma start karma.conf.js"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "karma": "^0.13.19",
    "live-server": "^0.9.1",
    "systemjs": "^0.19.17",
    "tsd": "^0.6.5",
    "typescript": "^1.7.5",
    "watch": "^0.17.1"
  }
}
