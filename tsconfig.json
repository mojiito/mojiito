{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "module": "system",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "rootDir": "lib",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "typings",
        "dist",
        ".tmp",
        ".results",
        "examples"
    ]
}