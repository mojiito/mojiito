{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "module": "commonjs",
        "outDir": "./dist",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "typings",
        "dist",
        ".tmp",
        ".results",
        "examples"
    ],
    "files": [
        "./node_modules/reflect-metadata/reflect-metadata.d.ts",
        "./typings/index.d.ts",
        "./modules/index.ts"
    ]
}