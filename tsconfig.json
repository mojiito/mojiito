    "exclude": [
        "node_modules",
        "typings",
        "dist",
        ".tmp",
        ".results",
        "examples"
    ],
    "files": [
        "./typings/index.d.ts",
        "./modules/typings.d.ts",
        "./index.ts"
    ]
}